<Page x:Class="Транспортные_задачи.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Транспортные_задачи"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Главное меню" Background="#FFF5F5F5">

    <Grid>
        <!-- Основной контейнер -->
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="600"
                Padding="20"
                Background="White"
                CornerRadius="8"
                BorderBrush="#FFBDBDBD"
                BorderThickness="1">

            <StackPanel>
                <!-- Логотип -->
                <Viewbox Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="ТРАНСПОРТНЫЕ" 
                                   Foreground="#FF673AB7"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="ЗАДАЧИ" 
                                   Foreground="#FF673AB7"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,-10,0,0"/>
                        <Border Height="3" 
                                Background="#FF673AB7" 
                                Margin="0,5" 
                                Width="200"
                                HorizontalAlignment="Center"/>
                        <TextBlock Text="Выберите метод решения" 
                                   Foreground="#FF444444"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Viewbox>

                <!-- Кнопки методов -->
                <Button Content="Метод северо-западного угла" 
                        Click="NorthWestButton_Click" 
                        Height="45"
                        Margin="0,10"
                        Background="#FF673AB7"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"/>

                <Button Content="Метод минимальных элементов" 
                        Click="MinElementsButton_Click" 
                        Height="45"
                        Margin="0,10"
                        Background="#FF673AB7"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"/>

                <Button Content="Симплекс метод" 
                        Click="SimplexButton_Click" 
                        Height="45"
                        Margin="0,10"
                        Background="#FF673AB7"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>