<Page x:Class="Транспортные_задачи.NorthWestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Транспортные_задачи"
      Background="#FFF5F5F5"
      Title="Метод северо-западного угла" Height="600" Width="800">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="5" Background="#FF673AB7" Padding="10">
                <TextBlock Text="Метод северо-западного угла" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <Button Content="Назад" 
                    Click="Back_Click" 
                    Width="100" 
                    Height="35"
                    Grid.Column="1"
                    Margin="10,0,0,15"
                    Background="#FF9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Bold"/>
        </Grid>

        <!-- Панель параметров -->
        <GroupBox Grid.Row="1" Header="Параметры транспортной задачи" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="5">
                <StackPanel Margin="0,0,20,0">
                    <Label Content="Количество поставщиков (строк):" 
                           FontWeight="SemiBold"
                           Foreground="#FF444444"/>
                    <TextBox x:Name="RowsInput" 
                             Width="120" 
                             Margin="0,5,0,0"
                             Padding="5"
                             BorderBrush="#FFBDBDBD"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <Label Content="Количество потребителей (столбцов):" 
                           FontWeight="SemiBold"
                           Foreground="#FF444444"/>
                    <TextBox x:Name="ColumnsInput" 
                             Width="120" 
                             Margin="0,5,0,0"
                             Padding="5"
                             BorderBrush="#FFBDBDBD"
                             BorderThickness="1"/>
                </StackPanel>

                <Button Content="Создать таблицу" 
                        Click="CreateTable_Click" 
                        Width="150" 
                        Height="35"
                        Margin="0,20,0,0"
                        Background="#FF673AB7"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>

        <!-- Панель ввода данных -->
        <GroupBox Grid.Row="2" Header="Ввод данных" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="InputTablePanel" Visibility="Collapsed">
                    <TextBlock Text="Матрица затрат:" 
                               Margin="0,0,0,5"
                               FontWeight="SemiBold"
                               Foreground="#FF444444"/>

                    <Border BorderBrush="#FFBDBDBD" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="5"
                            Margin="0,0,0,15">
                        <ItemsControl x:Name="CostMatrixGrid"/>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0" Width="300">
                            <TextBlock Text="Поставки (через запятую):" 
                                       Margin="0,0,0,5"
                                       FontWeight="SemiBold"
                                       Foreground="#FF444444"/>
                            <TextBox x:Name="SupplyInput" 
                                     Padding="5"
                                     BorderBrush="#FFBDBDBD"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Width="300">
                            <TextBlock Text="Спрос (через запятую):" 
                                       Margin="0,0,0,5"
                                       FontWeight="SemiBold"
                                       Foreground="#FF444444"/>
                            <TextBox x:Name="DemandInput" 
                                     Padding="5"
                                     BorderBrush="#FFBDBDBD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Рассчитать" 
                            Click="Calculate_Click" 
                            Width="150" 
                            Height="35"
                            Margin="0,15,0,0"
                            Background="#FF673AB7"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Панель результатов -->
        <GroupBox Grid.Row="3" Header="Результаты решения">
            <TextBox x:Name="ResultOutput" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     Height="150"
                     BorderBrush="#FFBDBDBD"
                     Background="White"
                     Padding="5"/>
        </GroupBox>
    </Grid>
</Page>